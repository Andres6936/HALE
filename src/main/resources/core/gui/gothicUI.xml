		<!-- Widget background and overlay definitions, using the above images -->
		
		<select name="redbutton.background" border="3">
			<alias ref="redbutton-normal" if="disabled" tint="#5fff"/>
            <alias ref="redbutton-armed" if="armed"/>
            <alias ref="redbutton-hover" if="hover"/>
            <alias ref="redbutton-normal"/>
        </select>
		
		<select name="redbutton.overlay">
			<alias ref="closex" if="disabled" tint="#5fff"/>
			<alias ref="closex" if="armed" tint="#888"/>
			<alias ref="closex" if="hover" tint="#888"/>
			<alias ref="closex"/>
		</select>
		
		<select name="roundedbutton.background" border="2">
		    <alias ref="roundedbuttonbackground-gothic-normal" if="disabled" tint="#5fff"/>
		    <alias ref="roundedbuttonbackground-gothic-normal" if="armed" tint="#888"/>
			<alias ref="roundedbuttonbackground-gothic-hover" if="hover"/>
			<alias ref="roundedbuttonbackground-gothic-normal"/>
		</select>
		
		<select name="button.background" border="3">
		    <alias ref="buttonbackground-gothic-normal" if="disabled" tint="#5fff"/>
            <alias ref="buttonbackground-gothic-normal" if="armed" tint="#888"/>
			<alias ref="buttonbackground-gothic-hover" if="hover"/>
            <alias ref="buttonbackground-gothic-normal"/>
		</select>
		
		<select name="togglebutton.background" border="5,3">
            <alias ref="buttonbackground-gothic-selected" if="disabled + selected" tint="#5fff"/>
            <alias ref="buttonbackground-gothic-normal" if="disabled" tint="#5fff"/>
            <alias ref="buttonbackground-gothic-normal" if="armed" tint="#888"/>
            <alias ref="buttonbackground-gothic-selected" if="selected"/>
			<alias ref="buttonbackground-gothic-hover" if="hover"/>
            <alias ref="buttonbackground-gothic-normal"/>
        </select>
		
		<select name="itemlistviewercontent.background">
			<alias ref="white" if="draghover" tint="#444"/>
			<alias ref="none"/>
		</select>
		
		<select name="mainpanebutton.background" border="3">
		    <alias ref="roundedbuttonbackground-gothic-normal" if="armed" tint="#888"/>
			<alias ref="roundedbuttonbackground-gothic-hover" if="hover"/>
			<animation if="notification" timeSource="notification">
				<frame ref="roundedbuttonbackground-gothic-hover" tint="#844" duration="400"/>
				<frame ref="roundedbuttonbackground-gothic-hover" tint="#f88" duration="400"/>
			</animation>
			<alias ref="roundedbuttonbackground-gothic-normal"/>
		</select>
		
		<select name="valueadjuster.display.background">
            <alias ref="buttonbackground-gothic-normal" if="disabled" tint="#8fff"/>
            <alias ref="buttonbackground-gothic-normal" if="armed | pressed"/>
			<alias ref="buttonbackground-gothic-hover" if="hover"/>
            <alias ref="buttonbackground-gothic-normal"/>
        </select>
		
		<alias name="scrollbar.thumb.background" ref="valueadjuster.display.background"/>
		
		<select name="portraitviewer.overlay">
			<alias ref="tinybackground-red" if="selected"/>
			<alias ref="tinybackground-transparent"/>
		</select>
		
		<select name="portraitviewer.background">
			<alias ref="tinybackground-gothic" if="armed" tint="#666"/>
			<alias ref="tinybackground-gothic" if="hover" tint="#333"/>
			<alias ref="tinybackground-gothic" if="draghover" tint="#333"/>
			<alias ref="tinybackground-gothic"/>
		</select>
		
		<select name="abilityselectorbutton.background">
			<alias ref="buttonbackground-gothic-normal" if="alreadyOwned"/>
            <alias ref="buttonbackground-gothic-normal" if="prereqsNotMet" tint="#5fff"/>
            <alias ref="buttonbackground-gothic-normal" if="armed" tint="#888"/>
			<alias ref="buttonbackground-gothic-hover" if="hover"/>
            <alias ref="buttonbackground-gothic-normal" tint="#0f0"/>
		</select>
		
		<select name="itemiconviewer.background" border="2">
			<alias ref="roundedbuttonbackground-gothic-normal" if="armed" tint="#888"/>
			<alias ref="roundedbuttonbackground-gothic-hover" if="hover + profNotMet" tint="#f44"/>
			<alias ref="roundedbuttonbackground-gothic-hover" if="hover"/>
			<alias ref="roundedbuttonbackground-gothic-hover" if="draghover"/>
			<alias ref="roundedbuttonbackground-gothic-normal" if="profNotMet" tint="#f44"/>
			<alias ref="roundedbuttonbackground-gothic-normal" if="unaffordable" tint="#ccc"/>
			<alias ref="roundedbuttonbackground-gothic-normal"/>
		</select>

		<composed name="checkbutton.background" border="4,3">
			<select>
				<alias ref="buttonbackground-gothic-normal" if="armed" tint="#888"/>
				<alias ref="buttonbackground-gothic-hover" if="hover"/>
				<alias ref="buttonbackground-gothic-normal"/>
			</select>
			<grid weightsX="0,1" weightsY="1" inset="2,4,0,0">
				<select center="true">
					<composed if="selected + armed">
						<alias ref="textbackground-gothic" if="armed" tint="#888"/>
						<alias ref="checkbutton-tick"/>
					</composed>
					<composed if="selected">
						<alias ref="textbackground-gothic"/>
						<alias ref="checkbutton-tick"/>
					</composed>
					<alias ref="textbackground-gothic" if="armed" tint="#888"/>
					<alias ref="textbackground-gothic"/>
				</select>
				<alias ref="none"/>
			</grid>
		</composed>
		
		<alias name="scrollbar.background" ref="tinybackground-gothic"/>
		
		<alias name="centereduparrow" ref="uparrow" center="true"/>
		<alias name="centereddownarrow" ref="downarrow" center="true"/>
		<alias name="centeredrightarrow" ref="rightarrow" center="true"/>
		<alias name="centeredleftarrow" ref="leftarrow" center="true"/>
		
		<select name="endturnbutton.background" border="3">
			<alias ref="endturnbutton-normal" if="disabled" tint="#8fff"/>
			<animation if="notification + armed" timeSource="notification">
				<frame ref="endturnbutton-active" tint="#f88" duration="500"/>
				<frame ref="endturnbutton-active" tint="#fff" duration="500"/>
			</animation>
			<animation if="notification + hover" timeSource="notification">
				<frame ref="endturnbutton-hover" tint="#f88" duration="500"/>
				<frame ref="endturnbutton-hover" tint="#fff" duration="500"/>
			</animation>
			<animation if="notification" timeSource="notification">
				<frame ref="endturnbutton-normal" tint="#f00" duration="500"/>
				<frame ref="endturnbutton-normal" tint="#fff" duration="500"/>
			</animation>
            <alias ref="endturnbutton-active" if="armed"/>
			<alias ref="endturnbutton-hover" if="hover"/>
            <alias ref="endturnbutton-normal"/>
		</select>
		
		<select name="editfield.background">
            <alias ref="textbackground-gothic" if="readonly" tint="#888"/>
            <alias ref="textbackground-gothic"/>
        </select>
        
        <animation name="editfield.cursor" timeSource="keyboardFocus">
            <frame ref="editfieldcursor" duration="500"/>
            <frame ref="none" duration="500"/>
        </animation>
        <alias name="editfield.selection" ref="white" tint="#faaa"/>
		
		<select name="vscrollbar.upbutton.background">
            <composed if="armed">
                <alias ref="buttonbackground-gothic-normal" tint="#888"/>
                <alias ref="centereduparrow" inset="1,1,-1,-1"/>
            </composed>
			<composed if="hover">
				<alias ref="buttonbackground-gothic-hover"/>
				<alias ref="centereduparrow"/>
			</composed>
            <composed>
                <alias ref="buttonbackground-gothic-normal"/>
                <alias ref="centereduparrow"/>
            </composed>
        </select>
        <select name="vscrollbar.downbutton.background">
            <composed if="armed">
                <alias ref="buttonbackground-gothic-normal" tint="#888"/>
                <alias ref="centereddownarrow" inset="1,1,-1,-1"/>
            </composed>
			<composed if="hover">
				<alias ref="buttonbackground-gothic-hover"/>
				<alias ref="centereddownarrow"/>
			</composed>
            <composed>
                <alias ref="buttonbackground-gothic-normal"/>
                <alias ref="centereddownarrow"/>
            </composed>
        </select>

        <select name="hscrollbar.leftbutton.background">
            <composed if="armed">
                <alias ref="buttonbackground-gothic-normal" tint="#888"/>
                <alias ref="centeredleftarrow" inset="1,1,-1,-1"/>
            </composed>
			<composed if="hover">
				<alias ref="buttonbackground-gothic-hover"/>
				<alias ref="centeredleftarrow"/>
			</composed>
            <composed>
                <alias ref="buttonbackground-gothic-normal"/>
                <alias ref="centeredleftarrow"/>
            </composed>
        </select>
        <select name="hscrollbar.rightbutton.background">
            <composed if="armed">
                <alias ref="buttonbackground-gothic-normal" tint="#888"/>
                <alias ref="centeredrightarrow" inset="1,1,-1,-1"/>
            </composed>
			<composed if="hover">
				<alias ref="buttonbackground-gothic-hover"/>
				<alias ref="centeredrightarrow"/>
			</composed>
            <composed>
                <alias ref="buttonbackground-gothic-normal"/>
                <alias ref="centeredrightarrow"/>
            </composed>
        </select>
		
		<select name="combobox.button.background" inset="2,0,2,2">
            <composed if="armed">
                <alias ref="buttonbackground-gothic-normal" tint="#888"/>
                <alias ref="centereddownarrow" inset="1,1,-1,-1"/>
            </composed>
			<composed if="hover">
				<alias ref="buttonbackground-gothic-hover"/>
				<alias ref="centereddownarrow"/>
			</composed>
            <composed>
                <alias ref="buttonbackground-gothic-normal"/>
                <alias ref="centereddownarrow"/>
            </composed>
        </select>
		
		<select name="listbox.display.background">
			<alias ref="textbackground-gothic" if="hover" tint="#888"/>
            <alias ref="textbackground-gothic"/>
		</select>
		
		<alias name="minimapviewport" ref="textbackground-transparent" tint="#f00"/>
		
		<alias name="colorselector.cursor" ref="white"/>
	</images>
</themes>