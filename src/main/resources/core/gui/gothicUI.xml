		<area name="tinybackground-transparent" border="2" xywh="12,291,12,12" splitx="L4,R4" splity="T4,B4"/>
		<area name="tinybackground-red" border="2" xywh="24,291,12,12" splitx="L4,R4" splity="T4,B4"/>
		
